  <script>
    let currentSlide = 0; // Paměť, na jakém slidu jsem
let isScrolling = false; // Ochrana proti nadměrnému scrollu 

const slides = document.querySelectorAll('.kont'); // Najde všechny prvky s třídou kont
const menu = document.getElementById('menu');
const podmenu = document.getElementById('podmenu'); //zavedem constantu podmenu a najde me ho
const isMobile = window.matchMedia("(max-width: 768px)").matches;
const hamburegr = document.getElementById("hamburger");
const mobileMenu = document.getElementById("mobileMenu");

//--- Zamezí klasickému scrollu prohlížeče
function onWheel(e) {
  e.preventDefault(); 
//---------------------------------------  



//---scrolovani-------------------------------------------------------------------------------------------------
  if (isScrolling) return; //pokud se scroluje zastav
  if (Math.abs(e.deltaY) < 20) return; //pokud bude touchped vice nez 20 zastav (rptoti driftovani)

  let nextSlide = currentSlide; //najdeme se slidy
  if (e.deltaY > 0) { //pokud bude smer vetsi nez 0 provede se program pod
    if (currentSlide < slides.length - 1) { //pokud nebudeme na slidu posuneme na dalsi 
      nextSlide++; //pricteme slidy do stuckerua 
    }
  } else { //jinak pobezi kod pod
    if (currentSlide > 0) { //pokud slide bude > nez 0 treba 1 tak slide odecteme ze stuckeru
      nextSlide--;
    }
  }
  if (nextSlide === currentSlide) return; //jestli to bude possledni slide zastav 

  isScrolling = true; 
  currentSlide = nextSlide;
//--------------------------------------------------------------------------------------------------------------  



  // --- skryvani menu -----------------------------------------------------------------------------------------
//najde id menu 
if (menu) {
    menu.classList.toggle('visible', currentSlide === 0);     // Pokud je currentSlide 0, třída 'visible' se přidá. Jinak se odebere.
}
updatePodmenu();


 //pridani podmenu---
function updatePodmenu() {
  if (!podmenu) return; // vykricnik zaneman ze: pokud podmenu neexistuje okamzite skocni funkci

  if (currentSlide >= 1) {
    podmenu.classList.add('visible2');
  } else {
    podmenu.classList.remove('visible2');
  }
}
//-----

//najeti na podmenu a zobrazeni menu---
podmenu.addEventListener('mouseenter', function() {
    // Když najedu na podmenu...
     setTimeout(() => { 
    podmenu.classList.remove('visible2'); // Podmenu zmizí
    menu.classList.add('visible');        // Hlavní menu se objeví
     }, 200);
});
//---
 
//odebrani menu a zobrazeni podmenu kdyz vyjedu z menu---
menu.addEventListener('mouseleave', () => {
    if (currentSlide === 0) return;

    menu.classList.remove('visible');
    podmenu.classList.add('visible2');
});
//---

  // Plynulý posun na slide---
  window.scrollTo({
    top: currentSlide * window.innerHeight,
    behavior: 'smooth'
  });
//---
  
//pocka 1s a pak udela isScroling---
  setTimeout(() => { 
    isScrolling = false;
  }, 1000);
}
//---

// Registrace události kolečka
window.addEventListener('wheel', onWheel, { passive: false });
//-------------------------------------------------------------------------------------------------------



// --- LOGO ANIMACE ---------------------------------------------------------------------------
const logo = document.getElementById('logo-svg');//zavedeme constantu loga a najde me logo

//pokud amme logo tak---
if (logo) { 
  const paths = logo.querySelectorAll('.draw');//zavedeme constantu pro kresleni
    paths.forEach(path => { //prok zadou cestu se provede
  const length = path.getTotalLength(); //zavede s econstanta cesty a zmeri eji cela delka
      path.style.strokeDasharray = length;//rozdeleni cary na vice kousku
    });
    //---

 //casovac kdy se prida viditelne logo (2ms)---
    setTimeout(() => {
      logo.classList.add('visible');
    }, 200);
}
//-------------------------------------------------------------------------------------------



//mobil scroll-------------------------------------------------------
if (isMobile) {
  document.body.style.overflowY = "auto";
} else {
  document.body.style.overflow = "hidden";
  window.addEventListener('wheel', onWheel, { passive: false });
}
//----------------------------------------------------------------

//hamburegr-----------------------------------
hamburegr.addEventListener("click", () => {
hamburegr.classList.toggle("active");
mobileMenu.classList.toggle("open");
})

hamburegr.addEventListener("click", (e) => {
    e.stopPropagation(); // zabrání zavření hned po kliknutí
    menu.classList.toggle("open");
});

document.addEventListener("click",() => {
 mobileMenu.classList.remove("open");
 hamburger.classList.remove("active");
})

//-------------------------------------
  </script>
</body>
</html>
